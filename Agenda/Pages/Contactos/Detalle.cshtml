@page
@model Razor_Agenda.Pages.Contactos.DetalleModel
@{
    ViewData["Title"] = "Detalle de Contacto";
}

@*Creamos el sgte contenedor con Boostrap*@
<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2 class="text-info">Detalle de Categoria: @Html.DisplayFor(m => m.Contacto.Id)</h2>
            <ul class="list-group">
              <li class="list-group-item">ID: @Html.DisplayFor(m => m.Contacto.Id)</li>
              <li class="list-group-item">NOMBRE: @Html.DisplayFor(m => m.Contacto.Nombre)</li>
              <li class="list-group-item">EMAIL: @Html.DisplayFor(m => m.Contacto.Email)</li>
              <li class="list-group-item">TELEFONO: @Html.DisplayFor(m => m.Contacto.Telefono)</li>
              @*Se mostrara la categoria al que pertenece el Contacto*@
              <li class="list-group-item">CATEGORIA: @Html.DisplayFor(m => m.Contacto.Categoria.Nombre)</li>
              <li class="list-group-item">FECHA CREACION: @Html.DisplayFor(m=>m.Contacto.FechaCreacion)</li>
            </ul>


        </div>

    </div>
    @*Creamos una div que nos permite volver al inicio*@
    <div class="row">
        <div class="col-6">
            @*Boton que hace volver al index*@
            <a asp-page="Index" class="btn btn-success">Volver</a>
        </div>
    </div>
</div>

